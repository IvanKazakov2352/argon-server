{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "username": {
      "type": "parameter.v0",
      "value": "{username.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "password": {
      "type": "parameter.v0",
      "value": "{password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "sfu-url": {
      "type": "parameter.v0",
      "value": "{sfu-url.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "sfu-client-id": {
      "type": "parameter.v0",
      "value": "{sfu-client-id.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "sfu-client-secret": {
      "type": "parameter.v0",
      "value": "{sfu-client-secret.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "jwt-key": {
      "type": "parameter.v0",
      "value": "{jwt-key.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "cache": {
      "type": "container.v0",
      "connectionString": "{cache.bindings.tcp.host}:{cache.bindings.tcp.port}",
      "image": "docker.io/library/redis:7.4",
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        }
      }
    },
    "rmq": {
      "type": "container.v0",
      "connectionString": "amqp://{username.value}:{password.value}@{rmq.bindings.tcp.host}:{rmq.bindings.tcp.port}",
      "image": "docker.io/library/rabbitmq:3.13-management",
      "volumes": [
        {
          "name": "AppHost-rmq-data",
          "target": "/var/lib/rabbitmq",
          "readOnly": false
        }
      ],
      "env": {
        "RABBITMQ_DEFAULT_USER": "{username.value}",
        "RABBITMQ_DEFAULT_PASS": "{password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5672
        },
        "management": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 15672
        }
      }
    },
    "pg": {
      "type": "container.v0",
      "connectionString": "Host={pg.bindings.tcp.host};Port={pg.bindings.tcp.port};Username={username.value};Password={password.value}",
      "image": "docker.io/library/postgres:16.4",
      "volumes": [
        {
          "name": "AppHost-pg-data",
          "target": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "{username.value}",
        "POSTGRES_PASSWORD": "{password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      }
    },
    "apiDb": {
      "type": "value.v0",
      "connectionString": "{pg.connectionString};Database=apiDb"
    },
    "argon-api": {
      "type": "project.v0",
      "path": "../Argon.Api/Argon.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{argon-api.bindings.http.targetPort}",
        "ConnectionStrings__DefaultConnection": "{apiDb.connectionString}",
        "ConnectionStrings__cache": "{cache.connectionString}",
        "ConnectionStrings__rmq": "{rmq.connectionString}",
        "sfu__url": "{sfu-url.value}",
        "sfu__clientId": "{sfu-client-id.value}",
        "sfu__clientSecret": "{sfu-client-secret.value}",
        "Jwt__Issuer": "Argon",
        "Jwt__Audience": "Argon",
        "Jwt__Key": "{jwt-key.value}",
        "Jwt__Expire": "228"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    }
  }
}